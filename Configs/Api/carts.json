{
	"create": {
		"entity": {
			"userId": {
				"type": "string",
				"isUniqe": true,
				"value": "user.id"
			},
			"cartItems": ["cartItem"],
			"createdAt": {
				"type": "date",
				"value": "functions.now()"
			}
		}
	},
	"alter": {
		"entity": {
			"alteredAt": {
				"type": "date",
				"value": "functions.now()"
			}
		}
	},
	"resource": {
		"id": "input._id",
		"itemsCount": "functions.sum(input.cartItems,'quantity')"
	}
}
