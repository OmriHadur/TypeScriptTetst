{
	"create": {
		"entity": {
			"userId": {
				"type": "string",
				"isUniqe": true,
				"value": "user.id"
			},
			"cartItems": ["cartItem"],
			"createdAt": {
				"type": "date",
				"value": "now()"
			}
		}
	},
	"alter": {
		"entity": {
			"alteredAt": {
				"type": "date",
				"value": "now()"
			}
		}
	},
	"resource": {
		"id": "input._id",
		"itemsCount": "sum(input.cartItems,'quantity')",
		"totalPrice": "toCurrency(sum(input.cartItems,'totalPrice'))"
	}
}
