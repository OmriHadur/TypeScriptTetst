{
    "types": {
        "create": {
            "email": "string"
        },
        "alter": {
            "password": "string",
            "name": "string"
        },
        "entity": {
            "email!": "string",
            "name": "string",
            "hashedPassword": "string",
            "createdAt": "date",
            "alteredAt": "date"
        },
        "resource": {
            "id": "string",
            "email": "string",
            "name": "string",
            "token": "string"
        }
    },
    "mapping": {
        "createToEntity": {
            "createdAt": "functions.now()"
        },
        "alterToEntity": {
            "hashedPassword": "functions.encrypt(input.password)",
            "alteredAt": "functions.now()"
        },
        "entityToResource": {
            "id": "input._id",
            "token": "functions.createToken(input)"
        }
    },
    "validations": {
        "create": {
            "email": {
                "required": true,
                "validEmail": true
            }
        },
        "alter": {
            "password": {
                "required": true,
                "minimumLength": 5,
                "upperCase": true
            },
            "name": {
                "required": true,
                "minimumLength": 2
            }
        }
    }
}