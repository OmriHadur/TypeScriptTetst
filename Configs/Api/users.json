{
	"create": {
		"input": {
			"email": {
				"required": true,
				"validEmail": true
			}
		},
		"entity": {
			"email": {
				"type": "string",
				"isUniqe": true
			},
			"createdAt": {
				"type": "date",
				"value": "functions.now()"
			}
		}
	},
	"alter": {
		"input": {
			"password": {
				"required": true,
				"minimumLength": 5,
				"upperCase": true
			},
			"name": {
				"required": true,
				"minimumLength": 2
			}
		},
		"entity": {
			"name": "string",
			"hashedPassword": {
				"type": "string",
				"value": "functions.encrypt(input.password)"
			},
			"alteredAt": {
				"type": "date",
				"value": "functions.now()"
			}
		}
	},
	"resource": {
		"id": "input._id",
		"email": true,
		"name": true
	}
}
