{
	"create": {
		"input": {
			"barcode": {
				"required": true,
				"length": [13, 13]
			}
		},
		"variables": {
			"product": "products.findOne({barcode:input.barcode})"
		},
		"validations": {
			"productNotExist": "variables.product"
		},
		"entity": {
			"barcode": {
				"type": "string",
				"isUniqe": true
			},
			"price": {
				"type": "number",
				"value": "variables.product.price"
			}
		}
	},
	"alter": {
		"input": {
			"quantity": {
				"required": true,
				"positive": true
			}
		},
		"variables": {
			"discount": "2",
			"totalPrice": "variables.product.price * input.quantity - variables.discount"
		},
		"entity": {
			"quantity": "number",
			"alteredAt": {
				"type": "date",
				"value": "now()"
			},
			"discount": {
				"type": "number",
				"value": "variables.discount"
			},
			"totalPrice": {
				"type": "number",
				"value": "toCurrency(variables.totalPrice)"
			}
		}
	},
	"resource": {
		"id": "input._id",
		"alteredAt": true,
		"barcode": true,
		"quantity": true,
		"price": true,
		"discount": true,
		"totalPrice": true
	}
}
